# Thrive X Fitness API - Environment Variables
# Copy this file to .env for local development
# For Vercel deployment, add these variables in the Vercel dashboard

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*  # Comma-separated list of allowed origins or * for all

# Supabase Configuration (Connection pooling is handled automatically in serverless functions)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Price IDs (Subscription Plans)
STRIPE_PRICE_CORE=price_core_monthly_id
STRIPE_PRICE_ELITE=price_elite_monthly_id
STRIPE_PRICE_ULTIMATE=price_ultimate_monthly_id
STRIPE_PRICE_CORE_YEARLY=price_core_yearly_id
STRIPE_PRICE_ELITE_YEARLY=price_elite_yearly_id
STRIPE_PRICE_ULTIMATE_YEARLY=price_ultimate_yearly_id
STRIPE_PRICE_ESSENTIAL=price_essential_id  # If used

# Email Configuration (SMTP)
EMAIL_USER=your_email_address
EMAIL_PASS=your_email_password
EMAIL_SMTP_HOST=your_smtp_host  # e.g., smtp.office365.com
EMAIL_SMTP_PORT=587  # Common ports: 25, 465, 587
EMAIL_SMTP_SECURE=false  # true for 465, false for other ports

# AI Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# Additional Configuration (Optional)
# Add any other environment-specific variables here
